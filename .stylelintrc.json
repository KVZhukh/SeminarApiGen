{
    "extends": ["stylelint-config-standard-scss", "stylelint-prettier/recommended", "stylelint-config-prettier-scss"],
    "stylelint.validate": ["scss"],
    "rules": {
        "selector-class-pattern": "^[a-z0-9]+([A-Z][a-z0-9]*)*(_*[a-z0-9]+([A-Z][a-z0-9]*)*)?$",
        "scss/at-mixin-pattern": ["^[a-z0-9]+([A-Z][a-z0-9]*)*$"],
        "scss/at-function-pattern": ["^[a-z0-9]+([A-Z][a-z0-9]*)*$"],
        "keyframes-name-pattern": ["^[a-z0-9]+([A-Z][a-z0-9]*)*$"],
        "function-name-case": null,
        "scss/at-import-partial-extension": null,
        "scss/dollar-variable-pattern": null,
        "scss/no-global-function-names": null
    }
}
